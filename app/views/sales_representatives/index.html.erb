<p id="notice"><%= notice %></p>

<h1>Sales Representatives</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Middle name</th>
      <th>Experience</th>
      <th>Ssn</th>
      <th>City</th>
      <th>Country</th>
      <th>State</th>
      <th>Phone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales_representatives.each do |sales_representative| %>
      <tr>
        <td><%= sales_representative.first_name %></td>
        <td><%= sales_representative.last_name %></td>
        <td><%= sales_representative.middle_name %></td>
        <td><%= sales_representative.experience %></td>
        <td><%= sales_representative.ssn %></td>
        <td><%= sales_representative.city %></td>
        <td><%= sales_representative.country %></td>
        <td><%= sales_representative.state %></td>
        <td><%= sales_representative.phone %></td>
        <td><%= sales_representative.email %></td>
        <td><%= link_to 'Show', sales_representative %></td>
        <td><%= link_to 'Edit', edit_sales_representative_path(sales_representative) %></td>
        <td><%= link_to 'Delete', sales_representative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Add Sales Rep', new_sales_representative_path, class: "btn btn-link" %>
<%= link_to 'List of Doctors', doctors_path, class: "btn btn-link"  %>
